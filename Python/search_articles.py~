from connect_database import getDatabase
from check_engin import find_word_list,check_related



def search_db(topic):
    # delete'#' if "#" is at the very begining
    if topic[0]=="#":
       topic=topic[1:]
       topic=find_word_list(topic)
       print topic 
    db = getDatabase()
    contents = db.link_content.find()
    for content in contents:
        title = content["title"]
        tags = content["tags"]
        if topic.lower() in tags.lower():
           print "good"
           break
           #db.topic.insert('article_id':content['_id'])
        if topic.lower() in title.lower():
            print 'ddd'
            break
       
      








search_db("new yorkers")
